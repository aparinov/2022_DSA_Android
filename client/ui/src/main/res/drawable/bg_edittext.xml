<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item
                android:left="-5dp"
                android:right="-5dp"
                android:top="-5dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/neutral20" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="-5dp"
                android:right="-5dp"
                android:top="-5dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/primary100" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>